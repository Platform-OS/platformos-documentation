{% for item in data %}
  {% assign name = item.name %}
  {% assign fields = item.fields %}

  <h2>{{ item.name }}</h2>

  <h4>Fields</h4>
  <table class="table table-sm">
    <thead>
      <tr>
        <th class="w-25">Name</th>
        <th>Type</th>
        <th class="w-50">Description</th>
      </tr>
    </thead>
    <tbody>
      {% for f in fields %}
        <tr>
          <td>{{ f.name }}</td>
          <td>{% if f.type %}{{ f.type.name }}{% endif %}</td>
          <td class="text-capitalize">
            {% if f.is_deprecated %}DEPRECATED. Reason: {{ f.deprecation_reason }}<br/>{% endif %}
            {% if f.description %}{{ f.description }}{% endif %}
            {% if f.default_value %}Default: <code>{{ f.default_value }}</code>{% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endfor %}