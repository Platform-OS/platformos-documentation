{%- assign min = 1 -%}
{%- assign max = 3 -%}
{%- assign diff = max | minus: min -%}
{%- assign r = "now" | date: "%N" | modulo: diff | plus: min -%}

{% if context.session.test == blank %}
  {% session test = r %}
{% endif %}

{%- if r == 1 %}
  <script>window.instantpage = true;</script>
  <script src="{{ 'vendor/instantpage.js' | asset_url }}" type="module" defer></script>
{%- endif %}

<!--
  Session_ID: {{ context.session.session_id }}
  Instantpage: {{ context.session.test }}
-->