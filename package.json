{
  "name": "platform-os-documentation",
  "version": "3.0.0",
  "description": "Documentation for platformOS",
  "private": true,
  "repository": "mdyd-dev/platformos-documentation",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "watch": "npx webpack-cli -w",
    "sync": "pos-cli sync -o -l dev",
    "start": "npx concurrently npm:sync npm:watch",
    "build": "NODE_ENV=production npx webpack-cli",
    "build:graphql": "./scripts/generate-graphql.sh",
    "deploy": "npm run build && pos-cli deploy",
    "test": "docker run -v $PWD/tests/e2e:/tests -e \"MP_URL=$MP_URL\" -it platformos/testcafe 'testcafe \"chromium:headless --no-sandbox\" /tests'",
    "test-ci": "npx testcafe 'chromium:headless --no-sandbox' --screenshots-on-fails --screenshots=screenshots tests/e2e",
    "test-local": "npx testcafe \"chrome:headless\" tests/e2e"
  },
  "graphdoc": {
    "output": "./modules/graphql/public/views/pages/api-reference/graphql",
    "baseUrl": "./"
  },
  "author": "platformOS",
  "homepage": "https://documentation.platformos.com",
  "browserslist": "cover 90%, not ie 11",
  "devDependencies": {
    "@codeceptjs/configure": "^0.6.2",
    "autoprefixer": "^10.2.5",
    "codeceptjs": "^3.0.7",
    "concurrently": "^3.5.1",
    "css-loader": "5.2.4",
    "esbuild-loader": "^2.13.0",
    "mini-css-extract-plugin": "1.6.0",
    "pkg-dir": "^5.0.0",
    "playwright": "^1.10.0",
    "pos-graphdocs": "^2.6.15",
    "postcss": "8.2.14",
    "postcss-fixes": "^2.0.1",
    "postcss-import": "^14.0.1",
    "postcss-loader": "5.2.0",
    "tailwindcss": "^2.1.2",
    "tapable": "^1.1.3",
    "webpack": "5.36.2",
    "webpack-cli": "4.7.0",
    "webpack-require-from": "1.8.3"
  },
  "dependencies": {
    "docsearch.js": "^2.6.3",
    "prismjs": "1.23.0"
  }
}
