<aside class="w-84 flex-shrink-0 bg-white min-h-screen shadow-lg relative">

  <a href="/" class="block no-underline text-center my-8">
    <span class="screen-reader-text">Home</span>
    {% include 'svg/logo', height: 37 %}
  </a>

  <div class="mx-6 my-8 border-2 py-3 px-4 border-pos-divider flex items-center">
    <input id="type-search" type="text" placeholder="Search a type" autofocus="" class="border-0 m-0 p-0 text-lg" />
    <svg fill="none" class="text-pos-search" height="30" viewBox="0 0 26 26" xmlns="http://www.w3.org/2000/svg">
      <g stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5">
        <path clip-rule="evenodd"
          d="m15.5403 19.8028c4.0948-1.7402 6.0035-6.4704 4.2632-10.56518-1.7402-4.09476-6.4704-6.00348-10.56513-4.26325-4.09476 1.74023-6.00348 6.47043-4.26325 10.56513 1.74023 4.0948 6.47038 6.0035 10.56518 4.2633z"
          fill-rule="evenodd" />
        <path d="m18.0853 18.0844 6.248 6.2489" />
      </g>
    </svg>
  </div>

  <nav>
    <%#navigations%>
    <h4 class="ml-6 uppercase font-light text-lg mb-2"><%title%></h4>

    <ul class="list-none p-0 m-0">
      <%#items%>
      <li <%#isActive%>class="text-pos-darkblue bg-pos-page-bg"<%/isActive%> title="<% text %>">
        <a href="<%{href}%>"><%text%></a>
      </li>
      <%/items%>
    </ul>
    <%/navigations%>
  </nav>
</aside>